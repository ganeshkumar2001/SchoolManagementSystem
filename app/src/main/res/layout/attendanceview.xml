<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/gradient1"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="40dp"
        android:backgroundTint="@color/icon"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/attpercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textSize="30dp"
                android:layout_marginStart="18dp"
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="-60dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/primary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="65dp"
            >
            <TextView
                android:id="@+id/subname"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Programming"
                android:textSize="18dp"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:id="@+id/facTitile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subname"
                android:text="Faculty: "
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                ></TextView>

            <TextView
                android:id="@+id/facName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subname"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/facTitile"
                android:text="Sudha Shankar Prasad"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/attTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/facTitile"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Attended: "></TextView>

            <TextView
                android:id="@+id/attfrac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/facName"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/attTitle"
                android:text="10/10"
                android:textStyle="bold"

                ></TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>