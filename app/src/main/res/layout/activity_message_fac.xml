<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageFacActivity">

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/cardhome"
      android:layout_margin="20dp"
      app:cardCornerRadius="10dp"
      android:elevation="20dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

          <EditText
              android:id="@+id/titleMsg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="12dp"
              android:layout_marginTop="12dp"
              android:layout_marginEnd="12dp"
              android:layout_marginBottom="12dp"
              android:background="@drawable/msgedit"
              android:hint="Enter the title"
              android:padding="10dp"></EditText>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/contextMsg"
              android:hint="Enter the message"
              android:padding="10dp"
              android:layout_margin="12dp"
              android:layout_below="@+id/titleMsg"
              android:background="@drawable/msgedit"
              android:inputType="textMultiLine"
              ></EditText>

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/contextMsg"
              android:layout_centerHorizontal="true"
              android:layout_marginStart="10dp"
              android:id="@+id/submitMsg"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:text="Submit"></Button>

      </RelativeLayout>

  </androidx.cardview.widget.CardView>


</RelativeLayout>